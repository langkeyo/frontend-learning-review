    "js": "const calculator = {\n  add: function(a, b) { return a + b; },\n  subtract: function(a, b) { return a - b; },\n  multiply: function(a, b) { return a * b; },\n  divide: function(a, b) { return a / b; }\n};\n\nconst utils = {\n  formatNumber: function(num) { return num.toFixed(2); },\n  validate: function(a, b) { return typeof a === 'number' && typeof b === 'number'; }\n};\n\nfunction calculate(operation, a, b) {\n  if (!utils.validate(a, b)) {\n    throw new Error('Invalid numbers');\n  }\n  \n  let result;\n  switch (operation) {\n    case 'add':\n      result = calculator.add(a, b);\n      break;\n    case 'subtract':\n      result = calculator.subtract(a, b);\n      break;\n    case 'multiply':\n      result = calculator.multiply(a, b);\n      break;\n    case 'divide':\n      result = calculator.divide(a, b);\n      break;\n    default:\n      throw new Error('Invalid operation');\n  }\n  \n  return utils.formatNumber(result);\n}\n\nconsole.log('加法:', calculate('add', 5, 3));\nconsole.log('减法:', calculate('subtract', 5, 3));\nconsole.log('乘法:', calculate('multiply', 5, 3));\nconsole.log('除法:', calculate('divide', 5, 3));"
